{
    "env": {
        "es2020": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard",
        "plugin:mocha/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "mocha"
    ],
    "rules": {
        "no-unused-vars": "off",
        "no-useless-constructor": "off"
    }
}
